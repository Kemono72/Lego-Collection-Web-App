<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Sets Collection</title>
  <link href="/css/main.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-base-100 text-base-content">

  <!-- Navbar -->
  <%- include('partials/navbar', { page: '/lego/sets' }) %>

  <!-- Main Content -->
  <div class="container mx-auto p-4">
    <h1 class="text-5xl font-bold mb-6">My Lego Collection</h1>

    <!-- Table for Lego Sets -->
    <div class="overflow-x-auto">
      <table class="table-auto w-full bg-base-100 shadow-lg">
        <thead>
          <tr class="bg-base-200">
            <th class="p-4 text-left">Image</th>
            <th class="p-4 text-left">Set Number</th>
            <th class="p-4 text-left">Name</th>
            <th class="p-4 text-left">Year</th>
            <th class="p-4 text-left">Number of Parts</th>
            <th class="p-4 text-left">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% sets.forEach(set => { %>
            <tr class="hover:bg-base-200">
              <td class="p-4">
                <img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-16 h-16 object-cover rounded-lg shadow-md">
              </td>
              <td class="p-4"><%= set.set_num %></td>
              <td class="p-4"><%= set.name %></td>
              <td class="p-4"><%= set.year %></td>
              <td class="p-4"><%= set.num_parts %></td>
              <td class="p-4 flex space-x-2">
                <!-- Always Show View Details -->
                <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary btn-sm">View Details</a>

                <!-- Show Edit and Delete Only If Logged In -->
                <% if (session && session.user) { %>
                  <a href="/lego/editSet/<%= set.set_num %>" class="btn btn-secondary btn-sm">Edit</a>
                  <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error btn-sm">Delete</a>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
