<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User History</title>
  <link href="/css/main.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-base-100 text-base-content">

  <!-- Navbar -->
  <%- include('partials/navbar', { page: '/userHistory' }) %>

  <!-- Main content -->
  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content">
        <h1 class="text-4xl font-bold mb-6">User History</h1>
        <p class="text-lg mb-4">Welcome, <span class="text-primary"><%= user.userName %></span></p>
        <p class="mb-6">Email: <span class="font-medium"><%= user.email %></span></p>

        <% if (user.loginHistory.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
              <thead>
                <tr>
                  <th>Date/Time</th>
                  <th>Client Information</th>
                </tr>
              </thead>
              <tbody>
                <% user.loginHistory.forEach(history => { %>
                  <tr>
                    <td><%= history.dateTime %></td>
                    <td><%= history.userAgent %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>No login history available.</p>
        <% } %>
        <a href="/logout" class="btn btn-secondary mt-4">Logout</a>
      </div>
    </div>
  </div>

</body>
</html>
