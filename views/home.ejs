<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link href="/css/main.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-base-100 text-base-content">

  <!-- Navbar -->
  <%- include('partials/navbar', { page: '/' }) %>

  <!-- Main content -->
  <div class="container mx-auto p-4">

    <!-- Hero Section -->
    <div class="hero bg-base-200 rounded-lg p-6 mb-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Welcome</h1>
          <p class="py-6">Unleash your inner builder and embark on a fascinating journey through the colorful realm of Lego.</p>
          <a href="/lego/sets" class="btn btn-primary">Get Started Now</a>
        </div>
      </div>
    </div>

    <!-- Grid Section for Lego Sets -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
      <% if (legoSets && legoSets.length > 0) { %>
        <% legoSets.forEach(set => { %>
          <div>
            <div class="card bg-base-100 shadow-xl">
              <figure>
                <img class="w-full h-48 object-cover" src="<%= set.img_url %>" alt="<%= set.name %>">
              </figure>
              <div class="card-body">
                <h2 class="card-title"><%= set.name %></h2>
                <p>This set was released in <%= set.year %> and contains <%= set.num_parts %> parts.</p>
                <div class="card-actions justify-between">
                  <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary">View</a>
                  <a href="/lego/editSet/<%= set.set_num %>" class="btn btn-secondary">Edit</a>
                  <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">Delete</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-center py-6">
          <p class="text-xl">No Lego sets found in the collection.</p>
          <a href="/lego/addSet" class="btn btn-secondary">Add a New Set</a>
        </div>
      <% } %>
    </div>
  
  </div>

</body>
</html>
